{
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "plugins": [
        "react",
        "react-hooks"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": [
            "error",
            "never"
        ],
        "no-trailing-spaces": "error",
        "no-unused-vars": [
            "error",
            {
                "varsIgnorePattern": "^[A-Z_]"
            }
        ],
        "react/react-in-jsx-scope": "off",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
    },
    "env": {
        "browser": true,
        "es2020": true
    }
}