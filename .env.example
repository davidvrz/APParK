# ENTORNO DE EJECUCIÓN
# development: para desarrollo local con cookies inseguras y CORS relajado
# production: para despliegue con cookies seguras HTTPS y configuración optimizada
NODE_ENV=development

# Puerto del servidor (Railway y otras plataformas usan la variable PORT automáticamente)
PORT=3000

# CONFIGURACIÓN DE LA BASE DE DATOS
# Para desarrollo local: 'localhost'
# Para Docker Compose: se sobrescribe automáticamente a 'mariadb'
# Para Railway/producción: usar la URL de conexión proporcionada por el servicio
DB_HOST=localhost        
DB_USER=example_user
DB_PASSWORD=example_password
DB_NAME=example_db
DB_PORT=3306

# CONFIGURACIÓN DE REDIS
# Para desarrollo local: 'localhost'
# Para Docker Compose: se sobrescribe automáticamente a 'redis'
# Para Railway/producción: usar la URL de conexión proporcionada por el servicio
REDIS_HOST=localhost
REDIS_PORT=6379

# CONFIGURACIÓN DEL FRONTEND (CORS)
# Para desarrollo local: http://localhost:5173
# Para producción: URL del frontend desplegado
FRONTEND_URL=http://localhost:5173

# SECRETOS DE LA APLICACIÓN (¡Cambiar en producción!)
TOKEN_SECRET=example_token_secret_change_in_production
TOKEN_SECRET_PARKING=example_parking_token_secret_change_in_production

# Tokens de dispositivos de parking (generar según sea necesario)
parking_1_token=example_parking_token_change_in_production
